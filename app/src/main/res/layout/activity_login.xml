<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="model"
            type="com.jinkan.www.fastandroid.view_model.LoginViewModel" />
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:background="@color/bg_color"
        tools:context=".view.LoginActivity">

        <!-- Login progress -->
        <ProgressBar
            android:id="@+id/login_progress"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:visibility="gone" />

        <ScrollView
            android:id="@+id/login_form"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:gravity="center"
                android:id="@+id/email_login_form"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.jinkan.www.fastandroid.view.custom_view.CircleImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="@dimen/margin_top"
                    android:src="@mipmap/icon_about_us" />

                <RelativeLayout
                    android:layout_height="48dp"
                    android:layout_marginTop="@dimen/margin_top"
                    android:background="@drawable/bg_button_corner"
                    android:layout_width="match_parent"
                    android:paddingStart="16dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp">

                    <ImageView
                        android:id="@+id/icon_user"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/icon_about_us" />

                    <EditText
                        android:id="@+id/phone"
                        android:layout_height="match_parent"
                        android:layout_toEndOf="@+id/icon_user"
                        android:layout_toRightOf="@+id/icon_user"
                        android:background="null"
                        android:layout_width="match_parent"
                        android:inputType="phone"
                        android:hint="@string/prompt_email"
                        android:paddingStart="16dp"
                        android:maxLines="1"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp"
                        android:singleLine="true" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_height="48dp"
                    android:layout_marginTop="@dimen/margin_top"
                    android:background="@drawable/bg_button_corner"
                    android:layout_width="match_parent"
                    android:paddingStart="16dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp">

                    <ImageView
                        android:id="@+id/icon_password"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/icon_about_us" />

                    <EditText
                        android:id="@+id/password"
                        android:layout_height="match_parent"
                        android:layout_toEndOf="@+id/icon_password"
                        android:layout_toRightOf="@+id/icon_password"
                        android:background="null"
                        android:layout_width="match_parent"
                        android:inputType="textPassword"
                        android:hint="@string/prompt_password"
                        android:paddingStart="16dp"
                        android:maxLines="1"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp"
                        android:singleLine="true" />
                </RelativeLayout>


                <Button
                    android:background="@drawable/bg_button_them_color"
                    android:id="@+id/email_sign_in_button"
                    android:text="@string/login"
                    style="?android:textAppearanceSmall"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:layout_marginTop="16dp"
                    android:textSize="18sp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:layout_marginTop="@dimen/margin_top">

                    <View
                        android:id="@+id/group_divider"
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:background="@color/item_border_color" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_toStartOf="@+id/group_divider"
                        android:layout_toLeftOf="@+id/group_divider"
                        android:gravity="center"
                        android:text="@string/user_registration" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="16dp"
                        android:layout_marginLeft="16dp"
                        android:layout_toEndOf="@+id/group_divider"
                        android:layout_toRightOf="@+id/group_divider"
                        android:gravity="center"
                        android:text="@string/forget_password" />
                </RelativeLayout>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</layout>