<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:text="选择支付方式"
            android:textColor="@color/text_black"
            android:textSize="18sp"
            app:layout_constraintRight_toLeftOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/cancel"
            android:layout_width="@dimen/image"
            android:layout_height="@dimen/image"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:padding="@dimen/image_padding"
            android:src="@mipmap/cancel" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line"
            android:layout_alignParentBottom="true"
            android:background="@color/bg_color" />
    </RelativeLayout>

    <RadioGroup
        android:id="@+id/radio_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/we_chat_pay"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:checked="true"
            android:drawableStart="@mipmap/weixinzhifu"
            android:drawableLeft="@mipmap/weixinzhifu"
            android:drawablePadding="8dp"
            android:text="微信支付" />

        <RadioButton
            android:id="@+id/ali_pay"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:drawableStart="@mipmap/alipay"
            android:drawableLeft="@mipmap/alipay"
            android:drawablePadding="8dp"
            android:text="支付宝支付" />
    </RadioGroup>

    <Button
        android:id="@+id/ok"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="@dimen/layout_margin"
        android:background="@drawable/bg_button_them_color"
        android:text="@string/OK"
        android:textColor="@color/white"
        android:textStyle="bold" />


</LinearLayout>

